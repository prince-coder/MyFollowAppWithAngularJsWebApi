@using MyFollowAppWeb.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div ng-app="MyApp" ng-controller="ExternalLoginController" class="row">
    <div class="col-md-8">
        <strong class="error">{{error}}</strong>
        @Html.AntiForgeryToken()
        <form name="LoginData">
            <div class="form-group">
                <label class="col-md-2 control-label">User Name:</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" ng-model="ProductOwner.Email" required />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-md-2 control-label">Password:</label>
                <div class="col-md-10">
                    <input type="password" class="form-control" ng-model="ProductOwner.Password" required />
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" ng-disabled="!LoginData.$valid" ng-click="Login()" />
                </div>
            </div>
        </form>
    </div>
      
    <div class="col-md-4">
        <h2 class="form-login-heading">Social Logins</h2>
        <button class="btn-primary" type="button" data-ng-click="authExternalProvider('Facebook')">Connect With Facebook</button>
        <button class="btn-primary" type="button" data-ng-click="authExternalProvider('Twitter')">Connct with Twitter</button>
    </div>
