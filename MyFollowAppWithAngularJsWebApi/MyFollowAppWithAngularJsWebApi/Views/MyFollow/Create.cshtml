
@{
    ViewBag.Title = "My Follow Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Follow Registration</h2>


    <div ng-app="MyApp" ng-controller="MyFollowController">
        <strong class="error">{{error}}</strong>
        <div class="form-horizontal">
            @Html.AntiForgeryToken()
            
                        <form name="AddData" ng-submit="submitForm()" novalidate>
                <div class="form-group" ng-class="{ 'has-error' : AddData.Email.$invalid && (AddData.Email.$touched || submitted) }">
                    <input type="hidden" ng-init="MyFollow.TempId=@ViewBag.ProductOwnerRequestId" ng-model="MyFollow.TempId" />

                    <lable class="control-label col-md-2">Email:</lable>
                    <div class="col-md-10">
                        <input type="email"   name="Email" class="form-control" ng-model="MyFollow.EmailId" placeholder="Enter Email"  ng-required="true" />
                        <p ng-show="AddData.Email.$error.required && (AddData.Email.$touched || submitted)" class="help-block">Email is Required</p>
                        <p ng-show="AddData.Email.$invalid && (AddData.Email.$touched || submitted)" class="help-block">Please Enter Valid Email Address</p>
                    </div>
                </div>
                <div class="form-group" ng-class="{ 'has-error' : AddData.Password.$invalid && (AddData.Password.$touched || submitted) }">
                    <lable class="control-label col-md-2">Password:</lable>
                    <div class="col-md-10">
                        <input type="password" name="Password" class="form-control" ng-model="MyFollow.Password" placeholder="Enter Password" ng-required="true" />
                        <p ng-show="AddData.Password.$invalid && (AddData.Email.$touched || submitted)" class="help-block">Password is Required</p>
                    </div>
                </div>
                <div class="form-group">
                    <lable class="control-label col-md-2">Street1:</lable>
                    <div class="col-md-10">
                        <input type="text" name="Street1" class="form-control" ng-model="MyFollow.Street1" placeholder="Enter Street1" />
                    </div>
                </div>
                <div class="form-group">
                    <lable class="control-label col-md-2">Street2:</lable>
                    <div class="col-md-10">
                        <input type="text" name="Street2" class="form-control" ng-model="MyFollow.Street2" placeholder="Enter Street1" />
                    </div>
                </div>
                <div class="form-group">
                    <lable class="control-label col-md-2">City:</lable>
                    <div class="col-md-10">
                        <input type="text" name="City" class="form-control" ng-model="MyFollow.City" placeholder="Enter City" />
                    </div>
                </div>
                <div class="form-group">
                    <lable class="control-label col-md-2">State:</lable>
                    <div class="col-md-10">
                        <input type="text" name="State" class="form-control" ng-model="MyFollow.State" placeholder="Enter State" />
                    </div>
                </div>

                <div class="form-group">
                    <lable class="control-label col-md-2">Country:</lable>
                    <div class="col-md-10">
                        <input type="text" name="Country" class="form-control" ng-model="MyFollow.Country" placeholder="Enter Country" />
                    </div>
                </div>

                <div class="form-group">
                    <lable class="control-label col-md-2">Contact No:</lable>
                    <div class="col-md-10">
                        <input type="text" name="ContactNo" class="form-control" ng-model="MyFollow.ContactNo" placeholder="Enter Contact No" />
                    </div>
                </div>

                <div class="form-group">
                    <lable class="control-label col-md-2">Pin:</lable>
                    <div class="col-md-10">
                        <input type="text" name="Pin" class="form-control" ng-model="MyFollow.Pin" placeholder="Enter Pin" />
                    </div>
                </div>
                <div class="form-group" ng-class="{ 'has-error' : AddData.Role.$invalid && (AddData.Role.$touched || submitted) }">
                    <lable class="control-label col-md-2">User Role:</lable>
                    <div class="col-md-10">
                        <input type="text" name="Role" class="form-control" ng-model="MyFollow.Role" placeholder="Enter User Role" ng-required="true" />
                        <p ng-show="AddData.Role.$invalid && (AddData.Role.$touched || submitted)" class="help-block">User Role is Required</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="submit" ng-click="SaveData()" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>
